<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
	xmlns:composites="urn:import:com.jgefroh.rms.client.mvp.views.composites">

	<ui:with field="msg" type="com.jgefroh.rms.client.resources.MessageConstants" />
	<ui:with field="res" type="com.jgefroh.rms.client.resources.Resources" />

	<ui:style>
	
	</ui:style>

	<g:HTMLPanel>
		<div class="col-md-9">
			<div class="page-header">
				<h2>
					RMS - Create a Book
					<br />
					<span class="small">
						You can create a record representing a book here.
					</span>
				</h2>
			</div>
			<composites:RecordEditActionPanel
				ui:field="actionPanelTop" />

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Basic Information</h3>
				</div>
				<div class="panel-body">


					<div class="row">
						<div class="col-xs-6">
							<div class="form-group has-feedback">
								<label class="control-label">Title</label>
								<g:TextBox ui:field="titleField" styleName="form-control" />
								<span ui:field="titleGlyph" class="glyphicon form-control-feedback"></span>
								<span ui:field="titleMessage" class="help-block fieldMessage"></span>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="label-spacer"></div>
							<p class="help-block fieldMessage"></p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<div class="form-group has-feedback">
								<label class="control-label">Author</label>
								<g:TextBox ui:field="authorField" styleName="form-control" />
								<span ui:field="authorGlyph" class="glyphicon form-control-feedback"></span>
								<span ui:field="authorMessage" class="help-block fieldMessage"></span>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="label-spacer"></div>
							<p class="help-block fieldMessage">The primary author of the book.</p>
						</div>
					</div>
				</div>
			</div>

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Advanced Information</h3>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-xs-6">
							<div class="form-group">
								<label class="control-label">Edition</label>
								<g:TextBox ui:field="editionField" styleName="form-control" />
								<span ui:field="editionMessage" class="help-block fieldMessage"></span>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="label-spacer"></div>
							<p class="help-block fieldMessage"></p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<div class="form-group">
								<label class="control-label">Publisher</label>
								<g:TextBox ui:field="publishedByField" styleName="form-control" />
								<span ui:field="publishedByMessage" class="help-block fieldMessage"></span>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="label-spacer"></div>
							<p class="help-block fieldMessage"></p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<div class="form-group">
								<label class="control-label">Location Published</label>
								<g:TextBox ui:field="publishedLocationField"
									styleName="form-control" />
								<span ui:field="publishedLocationMessage" class="help-block fieldMessage"></span>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="label-spacer"></div>
							<p class="help-block fieldMessage">The location the book was published (typically a
								city).</p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<div ui:field="publishedDateFormGroup" class="form-group has-feedback">
								<label class="control-label">Year Published</label>
								<d:DateBox ui:field="publishedDateField" styleName="form-control" />
								<span ui:field="publishedDateGlyph" class="glyphicon form-control-feedback"></span>
								<span ui:field="publishedDateMessage" class="help-block fieldMessage"></span>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="label-spacer"></div>
							<p class="help-block fieldMessage">A year with format: YYYY</p>
						</div>
					</div>
				</div>
			</div>

			<div class="panel panel-default">
				<div class="panel-heading">
					<h3 class="panel-title">Book Properties</h3>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-xs-6">
							<div class="form-group">
								<label class="control-label">Format</label>
								<select ui:field="formatField" class="form-control">
									<option>Paperback</option>
									<option>Hardback</option>
									<option>E-Book</option>
									<option>Audiobook</option>
								</select>
								<span ui:field="formatMessage" class="help-block fieldMessage"></span>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="label-spacer"></div>
							<p class="help-block fieldMessage"></p>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-6">
							<div class="form-group">
								<label class="control-label">Quality</label>
								<select ui:field="qualityField" class="form-control">
									<option>Brand New</option>
									<option>Like New</option>
									<option>Good</option>
									<option>Acceptable</option>
									<option>Poor</option>
									<option>Unreadable</option>
								</select>
								<span ui:field="qualityMessage" class="help-block fieldMessage"></span>
							</div>
						</div>
						<div class="col-xs-6">
							<div class="label-spacer"></div>
							<p class="help-block fieldMessage"></p>
						</div>
					</div>
				</div>
			</div>
			<composites:RecordEditActionPanel
				ui:field="actionPanelBottom" />
		</div>
	</g:HTMLPanel>


</ui:UiBinder>